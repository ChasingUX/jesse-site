title: Labs
blog: labs
---

<section class="Wrapper">
  <% page_articles.each_with_index do |article, i| %>
    <article>
      <h2><%= link_to article.title, article.url %></h2>
      <p class="article-metadata"><%= article.date.strftime('%B %e, %Y') %></p>
      <% if article.data.has_key?('hero') %>
        <% link_to article.url, class: 'hero-link' do %>
          <%= image_tag article.data['hero'], class: 'hero' %>
        <% end %>
      <% end %>
      <div class="summary">
        <p><%= article.data['summary'] %></p>
        <p class="read-more"><%= link_to "Read More", article.url %></p>
      </div>
    </article>
  <% end %>
</section>
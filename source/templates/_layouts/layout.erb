<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "The Portolio of Jesse Chase – Product Designer in NYC" %></title>
    <meta name="description" content="Jesse Chase is a product designer in New York City, currently Creative Director at DigitalOcean">
    <meta name="keywords" content="Jesse Chase, Product Designer, Creative Director, New York Product Designers">

    <meta name="twitter:card" content="Jesse Chase is a product designer in New York City, currently Creative Director at DigitalOcean">
    <meta name="twitter:site" content="The Portfolio of Jesse Chase">
    <meta name="twitter:title" content="The Portolio of Jesse Chase – Product Designer in NYC">
    <meta name="twitter:description" content="Jesse Chase is a product designer in New York City, currently Creative Director at DigitalOcean">

    <meta name="og:title" content="The Portolio of Jesse Chase – Product Designer in NYC">
    <meta name="og:description" content="Jesse Chase is a product designer in New York City, currently Creative Director at DigitalOcean">
    <meta name="og:site_name" content="The Portfolio of Jesse Chase">
    <meta property="og:image" content='http://jessecha.se/<%= image_path "jesse-face.png" %>'>
    <meta property="og:image:width" content="500"/>
    <meta property="og:image:height" content="292"/>


    <%= stylesheet_link_tag "all" %>

    <% if content_for?(:head) %>
      <%= yield_content :head %>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <% if page_classes.include? "work" %>
      <%= partial "work-panels" %>
    <% end %>

    <%= partial "header", locals: { is_animated: true } %>

    <div class="Fade">
      <%= yield %>
    
      <% if content_for?(:footer) %>
        <%= yield_content :footer %>
      <% else %>
        <%= partial "footer" %>
      <% end %>
    </div>
    <%= javascript_include_tag  "application" %>
  </body>
</html>

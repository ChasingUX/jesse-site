<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "The Portolio of Jesse Chase" %></title>
    
    <%= stylesheet_link_tag "all" %>

    <% if content_for?(:head) %>
      <%= yield_content :head %>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <% if page_classes.include? "work" %>
      <%= partial "work-panels" %>
    <% end %>

    <%= partial "header", locals: { is_animated: true } %>

    <div class="Fade">
      <%= yield %>
    
      <% if content_for?(:footer) %>
        <%= yield_content :footer %>
      <% else %>
        <%= partial "footer" %>
      <% end %>
    </div>
    <%= javascript_include_tag  "application" %>
  </body>
</html>
